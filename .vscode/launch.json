    "version": "0.2.0",
    "configurations": [
        {
            "name": "Demo.Api",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-demo-api",
            "program": "${workspaceFolder}/apps/src/Demo.Api/bin/Debug/net10.0/Demo.Api.dll",
            "args": [],
            "cwd": "${workspaceFolder}/apps/src/Demo.Api",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "console": "integratedTerminal"
        }
    ]
}
